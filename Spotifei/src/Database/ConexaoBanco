package database;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;

public class ConeccaoBanco {
    private static final String URL = "jdbc:postgresql://localhost:1111/spotfei?currentSchema=public";
    private static final String USER     = "postgres";
    private static final String PASSWORD = "02919";

    public static Connection conectar() {
        try {
            Connection conn = DriverManager.getConnection(URL, USER, PASSWORD);
            System.out.println(">>> Conectado em: " + URL);
            System.out.println("    Schema padr√£o: " + conn.getSchema());
            return conn;
        } catch (SQLException e) {
            e.printStackTrace();
            return null;
        }
    }
}
